{
  "name": "eslint-config-standard-ext",
  "type": "module",
  "version": "0.0.19",
  "description": "An extended standard eslint configuration",
  "author": "",
  "license": "MIT",
  "keywords": [],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./src/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup-node src/index.js --format cjs && tsup-node src/index.js --dts-only --format esm",
    "test": "node --test",
    "posttest": "npm run lint && tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "npm test && npm run build"
  },
  "dependencies": {
    "@antfu/eslint-config": "^2.21.0",
    "eslint-plugin-promise": "^6.2.0",
    "local-pkg": "^0.5.0"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.10",
    "@types/node": "^20.12.12",
    "eslint": "^9.4.0",
    "eslint-plugin-astro": "^1.2.0",
    "eslint-plugin-format": "^0.1.1",
    "prettier-plugin-astro": "^0.13.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "overrides": {
    "eslint-plugin-perfectionist": {
      "astro-eslint-parser": "^1.0.2"
    }
  }
}
